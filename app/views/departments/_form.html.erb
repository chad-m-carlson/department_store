<h1> <%= @department.id ? "Edit Department" : "Create Department" %></h1>

<%= form_for @department do |f| %>
<%= f.label :name, "Department Name" %>
  <%= f.text_field :name %>
  <br />
  <br />
  <br />
  <br />
  <%= f.label :description, "Department Description" %>
  <%= f.text_field :description %>
  <br />
  <br />
  <%= f.submit %>
<% end %>